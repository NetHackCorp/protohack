{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Protohack",
  "scopeName": "source.protohack",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.protohack",
          "match": "//.*$"
        },
        {
          "name": "comment.block.protohack",
          "begin": "\\/\\*",
          "end": "\\*\\/"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.protohack",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.protohack",
          "match": "\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.protohack",
      "match": "\\b(?:(?:0x[0-9A-Fa-f]+)|(?:[0-9]+(?:\\.[0-9]+)?))\\b"
    },
    "keywords": {
      "name": "keyword.control.protohack",
  "match": "\\b(?:let|const|craft|class|yield|if|else|while|for|break|continue|return|and|or|true|false|null|this|carve|etch|probe|inc)\\b"
    },
    "types": {
      "name": "support.type.protohack",
      "match": "\\b(?:numeric|flag|text|raw|any)\\b"
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.native.protohack",
          "match": "\\b(?:clock|sleep|rand_bytes|rand|sqrt|pow|len|to_string|upper|lower|hex_encode|hex_decode|println)\\b"
        },
        {
          "name": "entity.name.function.craft.protohack",
          "begin": "\\bcraft\\s+([A-Za-z_][\\w]*)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.craft.protohack"
            }
          },
          "end": "{",
          "patterns": []
        }
      ]
    }
  }
}
