{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vscode",
      "mocha"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
